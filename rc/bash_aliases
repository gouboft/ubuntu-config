alias gp='grep -nsr'
alias emd='cd ~/.emacs.d/emacs-config'
alias fd='find . -name' 
alias cp='cp -v'
alias mv='mv -v'
alias LS='ls'
alias b='cd ..'
alias f='cd -'
alias cl1='cd ..'
alias cl2='cd ../..'
alias cl3='cd ../../..'
alias cl4='cd ../../../..'
alias cl5='cd ../../../../..'
alias cl6='cd ../../../../../..'
alias cl7='cd ../../../../../../..'
alias cl8='cd ../../../../../../../..'
alias CD='cd'

# for work
if [ -f ~/.rc/bash_work ]; then
    . ~/.rc/bash_work
fi

# for emacs
alias em='emacsclient'
alias emnw='emacs -nw'

#alias for command
alias um='umount'
