# for scribes
alias sc='scribes'

# set my environment
export d=~/Desktop
export D=~/Downloads

export ao=~/Source/amlogic/nvidia/out/target/product/b04ref
export aos=~/Source/amlogic/nvidia/out/target/product/b04ref/system

#set java environment
export JAVA_HOME=/usr/lib/jvm/java-6-sun-1.6.0.26
export JRE_HOME=/usr/lib/jvm/java-6-sun-1.6.0.26/jre
export CLASSPATH=.:$CLASSPATH:$JAVA_HOME/lib:$JAVA_HOME/jre/lib
export PATH=$JAVA_HOME/bin:$JRE_HOME/bin:$PATH

# Add toolchain for compile
export PATH=/opt/toolchain/arm-eabi-4.5.0/bin:$PATH

# Add mysql path
export PATH=/usr/local/mysql/bin:$PATH

# My function
function grp()
{
	grep -nsr $@ .
}

function cl()
{
	if [ -d $@ ]; then
		cd $@ && ls
	elif [ -e $@ ]; then
		ll $@
	else
		echo -e '\033[0;31;1mNo such file or directory\033[0m' && ls && echo -e '\033[0;31;1mPlease check it\033[0m'
	fi
}

# Add Java Path
export JAVA_HOME=/usr/lib/jvm/jdk1.6.0_30
export CLASSPATH=.:$JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar
export PATH=$JAVA_HOME/bin:$PATH
